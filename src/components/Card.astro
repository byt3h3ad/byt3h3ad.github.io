---
import { Image } from "astro:assets";

const { title, image, author, authorLink, link, date, progress, description } =
  Astro.props;
---

<div
  class="grid justify-center text-center border-b-2 border-b-white p-5 m-3 w:1/3 md:w-1/2"
>
  <h2 class="text-xl mb-2">{title}</h2>
  <Image
    src={image}
    alt="book cover"
    height={100}
    width={100}
    class="my-3 justify-self-center"
  />
  <div>
    <p class="text-xs uppercase inline">author:</p>
    <a href={authorLink} class="underline">
      {author}
    </a>
  </div>
  <div>
    <p class="text-xs uppercase inline">Link:</p>
    <a href={link} class="underline">
      StoryGraph
      <span class="upArrow">&nbsp;</span>
    </a>
  </div>
  <div>
    <p class="text-xs uppercase inline">Circa:</p>
    <p class="inline slashed-zero oldstyle-nums">{date}</p>
  </div>
  <div class="mt-3 mb-7">
    <div
      class="border-2 border-zinc-300 uppercase rounded-sm inline pt-1 pb-1 pl-2 pr-2 text-xs text-"
    >
      {progress}
    </div>
  </div>
  <p class="whitespace-normal">{description}</p>
</div>

<style>
  p {
    @apply text-zinc-200;
  }
  a:hover {
    @apply text-blue-600;
  }
  .upArrow:after {
    content: "\2197 \FE0E";
  }
</style>
